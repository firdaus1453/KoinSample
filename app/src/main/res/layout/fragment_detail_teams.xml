<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".presentation.fragment.DetailTeamsFragment">
    <ImageView
            android:id="@+id/imgTeam"
            android:layout_width="150dp" android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            tools:src="@tools:sample/avatars"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/tvTeamName"
    android:textStyle="bold"
    android:textSize="24sp"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/imgTeam"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    tools:text="Name team"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/tvTeamDesc"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/tvTeamName"
    android:layout_centerHorizontal="true"
    tools:text="Deskripsi team"/>

</RelativeLayout>